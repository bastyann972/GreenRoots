<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Green Roots</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="/js/index.js" defer></script>
</head>

<body>

    <header>
        <nav class="nav-container">
            <div class="logo">
                <img src="/img/logoFeuille.png" alt="Logo GreenRoots" class="logo-img">
                <span class="logo-text">GreenRoots</span>
            </div>

            <div class="nav-links">
                <a href="/">Accueil</a>
                <a href="/tree">Nos arbres</a>
                <a href="/about">À propos</a>
            </div>

            <div class="nav-buttons">
                <% if (session.login) { %>
                    <!-- Dropdown menu for logged-in users -->
                    <div class="dropdown">
                        <button class="btn-user dropdown-toggle">
                            <i class="fas fa-user"></i> Mon Profil
                        </button>
                        <div class="dropdown-menu">
                            <a href="/profil">Profil</a>
                            <a href="/order">Mes commandes</a>
                            <a href="/orderHistory">Historique des commandes</a>
                            <form action="/logout" method="POST" class="dropdown-item">
                                <button type="submit" class="btn-disconnect">
                                    <i class="fas fa-sign-out-alt"></i> Déconnexion
                                </button>
                            </form>
                        </div>
                    </div>
                    <% } else { %>
                        <!-- Buttons for visitors -->
                        <a href="/login" class="btn-link">
                            <button class="btn-connection">
                                <i class="fas fa-sign-in-alt"></i> Connexion
                            </button>
                        </a>
                        <a href="/signup" class="btn-link">
                            <button class="btn-inscription">
                                <i class="fas fa-user-plus"></i> Inscription
                            </button>
                        </a>
                        <% } %>
                            <a href="/cart">
                                <button class="btn-cart">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                            </a>
                            <!-- Burger menu button -->
                            <input type="checkbox" id="checkbox" />
                            <label for="checkbox" class="toggle">
                                <div class="bars" id="bar1"></div>
                                <div class="bars" id="bar2"></div>
                                <div class="bars" id="bar3"></div>
                            </label>
            </div>
        </nav>

        <!-- Hidden burger menu -->
        <div id="burger-menu" class="burger-menu hidden">
            <a href="/">Accueil</a>
            <a href="/tree">Nos arbres</a>
            <a href="/about">À propos</a>
            <% if (session.login) { %>
                <a href="/profil">Profil</a>
                <a href="/order">Mes commandes</a>
                <a href="/orderHistory">Historique des commandes</a>
                <form action="/logout" method="POST" class="dropdown-item">
                    <button type="submit" class="btn-disconnect">
                        <i class="fas fa-sign-out-alt"></i> Déconnexion
                    </button>
                </form>
                <% } else { %>
                    <a href="/login">Connexion</a>
                    <a href="/signup">Inscription</a>
                    <% } %>
        </div>
    </header>