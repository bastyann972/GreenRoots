<%- include('partials/header') %>
    <main class="auth-container">
        <div class="auth-grid">
            <section class="auth-hero">
                <div class="auth-hero-bg">
                    <img src="https://images.unsplash.com/photo-1542601906990-b4d3fb778b09?auto=format&fit=crop&q=80"
                        alt="Forest background" class="auth-hero-image">
                    <div class="auth-hero-overlay"></div>
                </div>

                <div class="auth-hero-content">
                    <img src="./img/LogoChenebg.png" alt="LogoChene" class="auth-hero-logo">
                    <h1 class="auth-hero-title">Rejoignez la communauté GreenRoots</h1>
                    <p class="auth-hero-text">
                        Créez votre compte et commencez<br>
                        votre voyage vers un avenir plus vert
                    </p>
                </div>
            </section>

            <!-- Registration Form Section -->
            <section class="signup__form-section">
                <form class="signup__form" action="/signup" method="POST">
                    <div class="signup__form-grid">
                        <div class="form-group">
                            <label for="lastName">Nom</label>
                            <input type="text" id="lastname" name="lastname" required>
                        </div>
                        <div class="form-group">
                            <label for="firstname">Prénom</label>
                            <input type="text" id="firstname" name="firstname" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                    </div>

                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <div class="password-input">
                            <input type="password" id="password" name="password" class="form-input"
                                placeholder="Votre mot de passe" required minlength="12"
                                title="Le mot de passe doit contenir au moins 12 caractères, une minuscule, une majuscule, un chiffre et un caractère spécial." />
                            <button type="button" id="togglePassword" class="toggle-password">
                                <svg id="eyeOpen" class="eye-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                    <circle cx="12" cy="12" r="3" />
                                </svg>
                                <svg id="eyeClosed" class="eye-icon hidden" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <path d="M17.94 17.94a10.54 10.54 0 0 1-11.88 0" />
                                    <path d="M1 12s4-8 11-8c2.92 0 5.58 1.06 7.78 2.82M15 15a3 3 0 1 1-4-4" />
                                    <line x1="1" y1="1" x2="23" y2="23" />
                                </svg>
                            </button>
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="passwordConfirm">Confirmer le mot de passe</label>
                        <div class="password-input">
                            <input type="passwordConfirm" id="passwordConfirm" name="passwordConfirm" class="form-input"
                                placeholder="Confirmer le mot de passe" required minlength="12"
                                title="Le mot de passe doit contenir au moins 12 caractères, une minuscule, une majuscule, un chiffre et un caractère spécial." />
                            <button type="button" id="togglePasswordConfirm" class="toggle-password">
                                <svg id="eyeOpenConfirm" class="eye-icon" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                    <circle cx="12" cy="12" r="3" />
                                </svg>
                                <svg id="eyeClosedConfirm" class="eye-icon hidden" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <path d="M17.94 17.94a10.54 10.54 0 0 1-11.88 0" />
                                    <path d="M1 12s4-8 11-8c2.92 0 5.58 1.06 7.78 2.82M15 15a3 3 0 1 1-4-4" />
                                    <line x1="1" y1="1" x2="23" y2="23" />
                                </svg>
                            </button>
                        </div>
                    </div>


                    <div class="form-footer">
                        <div class="remember-me">
                            <input type="checkbox" id="remember" name="remember" class="remember-checkbox">
                            <label for="remember" class="form-label">Se souvenir de moi</label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn--primary">
                        Créer mon compte
                    </button>

                    <div class="signup__divider">
                        <span>Ou continuer avec</span>
                    </div>

                    <div class="social-buttons">
                        <button type="button" class="social-button">Google</button>
                        <button type="button" class="social-button">Facebook</button>
                    </div>
                    <p class="signup__login-link">
                        Déjà membre ? <a href="/login">Se connecter</a>
                    </p>
                </form>
            </section>
        </div>
    </main>
    <%- include('partials/footer') %>